package paratask.test;

public class TestCancel {
	TASK public static void compute() {
		boolean requestCancel = false;
		for (int i = 0; i < Integer.MAX_VALUE && !(requestCancel=CurrentTask.cancelRequested()); i++) {
			System.out.println(i + " " + requestCancel);
			try {
				Thread.sleep(1000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
		}
		System.out.println(requestCancel);
	}
	
	public static void main(String[] args){
		TaskID tid = compute();
		TaskIDGroup tig = new TaskIDGroup(1);
		tig.add(tid);
		
		try {
			Thread.sleep(1000 * 5);
			tid.cancelAttempt();
			tig.waitTillFinished();
		} catch (ExecutionException e) {
			e.printStackTrace();
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
	}
}